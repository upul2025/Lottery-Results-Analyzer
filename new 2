  <script>
    // Main data holder
    let lotteryData = [];
    const singleInput = document.getElementById('singleInput');
    
    // Ball colors
    const ballColors = ['ball-1', 'ball-2', 'ball-3', 'ball-4', 'ball-5', 'ball-6'];

    // Initialize the application
    function initApp() {
      updateDateTime();
      setInterval(updateDateTime, 1000);
      
      setupEventListeners();
      loadJSONData();
      
      // Show keypad when input is focused
      singleInput.addEventListener('focus', () => {
        showKeypad();
      });
      
      singleInput.addEventListener('click', () => {
        showKeypad();
      });
    }
    
    // Update current date and time
    function updateDateTime() {
      const now = new Date();
      const options = { 
        weekday: 'long', 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit'
      };
      document.getElementById('currentDateTime').textContent = now.toLocaleDateString('si-LK', options);
    }
    
    // Setup event listeners
    function setupEventListeners() {
      // Analyze button
      document.getElementById('analyzeBtn').addEventListener('click', analyzeNumbers);
      
      // Reset button
      document.getElementById('resetBtn').addEventListener('click', resetApp);
      
      // Keypad buttons
      document.querySelectorAll('.keypad-btn[data-value]').forEach(btn => {
        btn.addEventListener('click', () => {
          const value = btn.getAttribute('data-value');
          if (singleInput.value.length < 2) {
            singleInput.value += value;
          }
        });
      });
      
      // Keypad clear button
      document.getElementById('keypadClear').addEventListener('click', () => {
        singleInput.value = '';
      });
      
      // Keypad close button
      document.getElementById('keypadClose').addEventListener('click', hideKeypad);
      
      // Export buttons
      document.getElementById('exportExcelBtn').addEventListener('click', exportToExcel);
      document.getElementById('copyTextBtn').addEventListener('click', copyResultsToClipboard);
      
      // Alert close button
      document.getElementById('alertClose').addEventListener('click', hideAlert);
    }
    
    // Show keypad
    function showKeypad() {
      document.getElementById('keypad').classList.add('visible');
    }
    
    // Hide keypad
    function hideKeypad() {
      document.getElementById('keypad').classList.remove('visible');
    }
    
    // Show alert
    function showAlert(title, message) {
      document.getElementById('alertTitle').textContent = title;
      document.getElementById('alertMessage').textContent = message;
      document.getElementById('customAlert').classList.add('visible');
      
      // Auto hide after 5 seconds
      setTimeout(hideAlert, 5000);
    }
    
    // Hide alert
    function hideAlert() {
      document.getElementById('customAlert').classList.remove('visible');
    }
    
    // Load JSON data from external file
    function loadJSONData() {
      updateStatus('connecting', 'දත්ත ලබා ගනිමින්...');
      
      // Add cache busting parameter to prevent caching
      const cacheBuster = new Date().getTime();
      fetch(`lottery_records.json?t=${cacheBuster}`)
        .then(response => {
          if (!response.ok) {
            throw new Error('දත්ත සේවාදායකයෙන් ලබා ගැනීමට නොහැකි විය');
          }
          return response.json();
        })
        .then(data => {
          // Process the data to match our expected format
          lotteryData = data.map((item, index) => {
            // Extract date, code, digits6, and last2 from the JSON structure
            const date = item.date || '';
            const code = item.letter || item.code || '';
            const digits6 = item.digits6 || '';
            const last2 = item.last2 || '';
            
            return {
              date: date,
              code: code,
              digits6: digits6,
              last2: String(last2).padStart(2, "0"),
              _parsedDate: date ? new Date(date) : null,
              _idx: index
            };
          }).sort((a, b) => {
            // Sort by date, newest first
            if (!a._parsedDate || !b._parsedDate) return 0;
            return b._parsedDate - a._parsedDate;
          });
          
          // Reassign indices after sort
          lotteryData.forEach((r, i) => r._idx = i);
          
          updateStatus('connected', `දත්ත සාර්ථකව ලබාගත්තා (${lotteryData.length} records)`);
          populateYearFilter();
          renderTable();
        })
        .catch(error => {
          console.error('Error loading JSON data:', error);
          updateStatus('error', 'දත්ත ලබා ගැනීමේ දෝෂය');
          showAlert('දත්ත දෝෂය', error.message);
          
          // Fallback to empty data if JSON loading fails
          lotteryData = [];
          renderTable();
        });
    }
    
    // Update status indicator
    function updateStatus(status, message) {
      const indicator = document.getElementById('statusIndicator');
      const statusText = document.getElementById('statusText');
      
      indicator.className = `status-indicator ${status}`;
      statusText.textContent = message;
    }
    
    // Populate year filter
    function populateYearFilter() {
      const yearFilter = document.getElementById('yearFilter');
      const years = new Set();
      
      // Extract unique years from data
      lotteryData.forEach(item => {
        const year = item.date.substring(0, 4);
        years.add(year);
      });
      
      // Clear existing options
      yearFilter.innerHTML = '';
      
      // Add year options
      Array.from(years).sort().reverse().forEach(year => {
        const checkboxId = `year-${year}`;
        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.id = checkboxId;
        checkbox.className = 'year-checkbox';
        checkbox.value = year;
        checkbox.checked = true;
        
        const label = document.createElement('label');
        label.htmlFor = checkboxId;
        label.className = 'year-checkbox-label';
        label.textContent = year;
        
        yearFilter.appendChild(checkbox);
        yearFilter.appendChild(label);
      });
    }
    
    // Get selected years from filter
    function getSelectedYears() {
      const checkboxes = document.querySelectorAll('.year-checkbox:checked');
      if (checkboxes.length === 0) {
        return [];
      }
      
      return Array.from(checkboxes).map(checkbox => checkbox.value);
    }
    
    // Render data table
    function renderTable() {
      const tbody = document.querySelector("#dataTable tbody");
      tbody.innerHTML = "";
      
      if (lotteryData.length === 0) {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td colspan="5" style="text-align: center; padding: 20px; color: var(--muted);">
            <i class="fas fa-exclamation-triangle"></i> දත්ත ලබා ගැනීමට නොහැකි විය
          </td>
        `;
        tbody.appendChild(tr);
        return;
      }
      
      lotteryData.forEach((r, i) => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${i+1}</td>
          <td>${r.date ?? "-"}</td>
          <td>${r.code ?? "-"}</td>
          <td>${r.last2 ?? "-"}</td>
          <td>${r.code} ${r.digits6 ? r.digits6.match(/.{1}/g).join(' ') : "-"}</td>
        `;
        tbody.appendChild(tr);
      });
    }
    
    // Analyze numbers
    function analyzeNumbers() {
      const inputValue = singleInput.value.trim();
      
      // Validate input
      if (inputValue.length !== 2 || !/^\d+$/.test(inputValue)) {
        showAlert('වලංගු නොවන ආදානය', 'කරුණාකර අංක දෙකක් ඇතුළත් කරන්න (00-99)');
        return;
      }
      
      // Check if data is loaded
      if (lotteryData.length === 0) {
        showAlert('දත්ත නොමැත', 'දත්ත තවම ලබා ගෙන නොමැත. කරුණාකර රැඳී සිටින්න.');
        return;
      }
      
      // Get selected years
      const selectedYears = getSelectedYears();
      if (selectedYears.length === 0) {
        showAlert('වර්ෂ තෝරන්න', 'කරුණාකර විශ්ලේෂණය සඳහා අවම වශයෙන් එක් වර්ෂයක් හෝ තෝරන්න');
        return;
      }
      
      // Show loading animation
      showLoadingAnimation();
      
      // Simulate processing delay
      setTimeout(() => {
        const searchNumber = inputValue;
        
        // Find matches in the data - ONLY at the beginning of the 6-digit number
        const matches = findMatches(searchNumber, selectedYears);
        
        // Display results
        displayResults(matches, searchNumber);
        
        // Hide loading animation
        hideLoadingAnimation();
      }, 2000);
    }
    
    // Find matches in the data - ONLY at the beginning of the 6-digit number
    function findMatches(searchNumber, selectedYears) {
      const matches = [];
      
      lotteryData.forEach(item => {
        // Check if the item matches the selected years
        const year = item.date.substring(0, 4);
        if (!selectedYears.includes(year)) {
          return;
        }
        
        // Check if the search number appears at the beginning of the 6-digit number
        if (item.digits6 && item.digits6.startsWith(searchNumber)) {
          matches.push(item);
        }
      });
      
      return matches;
    }
    
    // Display results
    function displayResults(matches, searchNumber) {
      const matchesContainer = document.getElementById("matches");
      
      if (matches.length === 0) {
        matchesContainer.innerHTML = `
          <div class="no-match">
            <i class="fas fa-search"></i> "${searchNumber}" සඳහා ගැලපීම් හමු නොවීය
            <div style="margin-top: 8px; font-size: 12px; color: var(--muted);">
              (අංකය ලොතරැයි අංකවල මුලටම යෙදී තිබිය යුතුය)
            </div>
          </div>
        `;
        return;
      }
      
      // Find adjacent draws for each match
      const resultsWithAdjacent = matches.map(match => {
        const date = new Date(match.date);
        const prevDate = new Date(date);
        prevDate.setDate(date.getDate() - 1);
        const nextDate = new Date(date);
        nextDate.setDate(date.getDate() + 1);
        
        const prevDateStr = prevDate.toISOString().split('T')[0];
        const nextDateStr = nextDate.toISOString().split('T')[0];
        
        const prevDraw = lotteryData.find(item => item.date === prevDateStr);
        const nextDraw = lotteryData.find(item => item.date === nextDateStr);
        
        return {
          match,
          prevDraw,
          nextDraw
        };
      });
      
      // Generate HTML for results
      let resultsHTML = '';
      
      resultsWithAdjacent.forEach((result, index) => {
        const { match, prevDraw, nextDraw } = result;
        
        resultsHTML += `
          <div class="box-card">
            <div class="box-header">
              <h3>
                <i class="fas fa-calendar-alt"></i> ${match.date}
                <span class="box-badge">${match.code}</span>
              </h3>
              <span>අවසාන 2: ${match.last2}</span>
            </div>
            
            <div class="match-list">
              <div class="match-item">
                <div class="match-meta">
                  <b>ජයග්‍රාහී අංකය</b>
                  ${match.date}
                </div>
                <div class="match-content">
                  <div class="match-digits">
                    <span style="color: var(--accent); font-weight: bold;">${match.letter} ${formatDigits(match.digits6, searchNumber)}</span>
                  </div>
                  <div class="match-full">
                    සම්පූර්ණ කේතය: ${match.code}
                  </div>
                </div>
                <div class="match-below highlight">
                  <i class="fas fa-info-circle"></i> අංකය "${searchNumber}" මුලටම යෙදී ඇත
                </div>
              </div>
              
              ${prevDraw ? `
                <div class="match-item">
                  <div class="match-meta">
                    <b>පෙර දිනය</b>
                    ${prevDraw.date}
                  </div>
                  <div class="match-content">
                    <div class="match-digits">
                      ${prevDraw.letter} ${prevDraw.digits6}
                    </div>
                    <div class="match-full">
                      සම්පූර්ණ කේතය: ${prevDraw.code}
                    </div>
                  </div>
                  <div class="match-below">
                    <i class="fas fa-arrow-down"></i> අවසාන 2: <strong>${prevDraw.last2}</strong>
                  </div>
                </div>
              ` : `
                <div class="match-item">
                  <div class="match-meta">
                    <b>පෙර දිනය</b>
                    දත්ත නොමැත
                  </div>
                  <div class="match-content">
                    <div class="match-digits" style="color: var(--muted);">
                      දත්ත නොමැත
                    </div>
                  </div>
                  <div class="match-below">
                    <i class="fas fa-exclamation-circle"></i> දත්ත නොමැත
                  </div>
                </div>
              `}
              
              ${nextDraw ? `
                <div class="match-item">
                  <div class="match-meta">
                    <b>ඊළඟ දිනය</b>
                    ${nextDraw.date}
                  </div>
                  <div class="match-content">
                    <div class="match-digits">
                      ${nextDraw.letter} ${nextDraw.digits6}
                    </div>
                    <div class="match-full">
                      සම්පූර්ණ කේතය: ${nextDraw.code}
                    </div>
                  </div>
                  <div class="match-below">
                    <i class="fas fa-arrow-up"></i> අවසාන 2: <strong>${nextDraw.last2}</strong>
                  </div>
                </div>
              ` : `
                <div class="match-item">
                  <div class="match-meta">
                    <b>ඊළඟ දිනය</b>
                    දත්ත නොමැත
                  </div>
                  <div class="match-content">
                    <div class="match-digits" style="color: var(--muted);">
                      දත්ත නොමැත
                    </div>
                  </div>
                  <div class="match-below">
                    <i class="fas fa-exclamation-circle"></i> දත්ත නොමැත
                  </div>
                </div>
              `}
            </div>
          </div>
        `;
      });
      
      matchesContainer.innerHTML = resultsHTML;
    }
    
    // Format digits to highlight the search number at the beginning
    function formatDigits(digits, searchNumber) {
      if (!digits.startsWith(searchNumber)) return digits;
      
      const match = digits.substring(0, 2);
      const after = digits.substring(2);
      
      return `<span style="color: var(--accent); font-weight: bold; text-decoration: underline;">${match}</span>${after}`;
    }
    
    // Show loading animation
    function showLoadingAnimation() {
      const overlay = document.getElementById('animationOverlay');
      const progressFill = document.getElementById('progressFill');
      const loadingText = document.getElementById('loadingText');
      const animationArea = document.getElementById('lotteryAnimationArea');
      
      // Reset progress bar
      progressFill.style.width = '0%';
      
      // Show overlay
      overlay.classList.add('visible');
      
      // Start progress bar
      setTimeout(() => {
        progressFill.style.width = '100%';
      }, 100);
      
      // Update loading text
      loadingText.textContent = 'විශ්ලේෂණය කරමින්...';
      
      // Create lottery balls
      createLotteryBalls();
    }
    
    // Create lottery balls animation
    function createLotteryBalls() {
      const animationArea = document.getElementById('lotteryAnimationArea');
      animationArea.innerHTML = '';
      
      // Create 6 balls
      for (let i = 0; i < 6; i++) {
        const ball = document.createElement('div');
        ball.className = `lottery-ball ${ballColors[i]}`;
        ball.textContent = Math.floor(Math.random() * 10);
        
        // Random position and animation delay
        const left = Math.random() * 85 + 5; // 5% to 90%
        const delay = Math.random() * 2;
        const duration = 3 + Math.random() * 2; // 3-5 seconds
        
        ball.style.left = `${left}%`;
        ball.style.animationDelay = `${delay}s`;
        ball.style.animationDuration = `${duration}s`;
        ball.style.animationName = 'ballFloat';
        ball.style.animationTimingFunction = 'cubic-bezier(0.25, 0.46, 0.45, 0.94)';
        ball.style.animationIterationCount = 'infinite';
        
        animationArea.appendChild(ball);
      }
    }
    
    // Hide loading animation
    function hideLoadingAnimation() {
      const overlay = document.getElementById('animationOverlay');
      const animationArea = document.getElementById('lotteryAnimationArea');
      
      overlay.classList.remove('visible');
      
      // Clear animation after a delay
      setTimeout(() => {
        animationArea.innerHTML = '';
      }, 500);
    }
    
    // Reset application
    function resetApp() {
      singleInput.value = '';
      document.getElementById('matches').innerHTML = `
        <div class="no-match">
          <i class="fas fa-info-circle"></i> වක්‍රී-පද්ධතිය සූදානම් — අංක යුගලයක් ඇතුළත් කර "විශ්ලේෂණය කරන්න" ඔබන්න.
        </div>
      `;
      hideKeypad();
    }
    
    // Export to Excel
    function exportToExcel() {
      if (lotteryData.length === 0) {
        showAlert('රික්ත දත්ත', 'පිටතට යාමට දත්ත නොමැත');
        return;
      }
      
      // Create worksheet
      const ws = XLSX.utils.json_to_sheet(lotteryData.map(item => ({
        'Index': item._idx,
        'Date': item.date,
        'Code': item.code,
        'Last 2': item.last2,
        '6 Digits': item.digits6
      })));
      
      // Create workbook
      const wb = XLSX.utils.book_new();
      XLSX.utils.book_append_sheet(wb, ws, 'Lottery Results');
      
      // Export to file
      XLSX.writeFile(wb, 'lottery_results.xlsx');
      
      showAlert('Excel පිටතට යාම', 'ලොතරැයි ප්‍රතිඵල සාර්ථකව පිටතට යවන ලදී');
    }
    
    // Copy results to clipboard
    function copyResultsToClipboard() {
      if (lotteryData.length === 0) {
        showAlert('රික්ත දත්ත', 'පිටපත් කිරීමට දත්ත නොමැත');
        return;
      }
      
      // Create text representation
      let text = 'Lottery Results\n';
      text += 'Index\tDate\tCode\tLast 2\t6 Digits\n';
      
      lotteryData.forEach(item => {
        text += `${item._idx}\t${item.date}\t${item.code}\t${item.last2}\t${item.digits6}\n`;
      });
      
      // Copy to clipboard
      navigator.clipboard.writeText(text).then(() => {
        showAlert('පිටපත් කරන ලදී', 'ලොතරැයි ප්‍රතිඵල සාර්ථකව පිටපත් කරන ලදී');
      }).catch(err => {
        showAlert('පිටපත් කිරීමේ දෝෂය', 'දත්ත පිටපත් කිරීමට නොහැකි විය');
      });
    }
    
    // Initialize the app when DOM is loaded
    document.addEventListener('DOMContentLoaded', initApp);
  </script>
</body>
</html>